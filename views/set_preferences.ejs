    <script>
   
    
    let savedPreferences = [];
try {
    const raw = document.getElementById("savedPreferences").value;
    savedPreferences = raw ? JSON.parse(raw) : [];
} catch {
    savedPreferences = [];
}

    console.log("Loaded from MongoDB:", savedPreferences);

    
    let skillsArr = [...savedPreferences];

    
    const skillElements = document.querySelectorAll(".skills");

    skillElements.forEach(skill => {
        const value = skill.textContent.trim();

 
        if (savedPreferences.includes(value)) {
            skill.classList.add("selected");
        }

        
        skill.addEventListener("click", () => {
            skill.classList.toggle("selected");

            if (skill.classList.contains("selected")) {
                if (!skillsArr.includes(value)) {
                    skillsArr.push(value);
                }
            } else {
                skillsArr = skillsArr.filter(s => s !== value);
            }

            console.log("Updated skills:", skillsArr);
        });
    });

   
    function savePreferences() {
        fetch("/user/set-preferences", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ interests: skillsArr })
        })
        .then(res => res.json())
        .then(data => {
            console.log("Saved:", data);
            window.location.href = "/foryou";
        })
        .catch(err => console.error(err));
    }
