<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Organizer Panel</title>
    <link rel="stylesheet" href="\stylesheets\organiser.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
</head>

<body>
    
    <aside class="sidebar">
        <div class="logo">EventUs</div>

        <ul class="menu">
            <li class="liactive"><span><i class="fa-regular fa-chart-bar"></i></span> Dashboard</li>
            <li class="liinactive"><span><i class="fa-solid fa-briefcase"></i></span> Workshops</li>
            <li class="liinactive"><span><i class="fa-regular fa-users"></i></span> Seminars</li>
            <li class="liinactive"><span><i class="fa-regular fa-lightbulb"></i></span> Hackathons</li>
            <li class="liinactive"><span><i class="fa-regular fa-handshake"></i></span> Networking Events</li>
            
        </ul>

       
    </aside>

   
    <main class="main">
    
        <header class="top-nav">
            <div class="title">Organizer Panel</div>

            <div class="right-items">
                <button class="upgrade-btn">Upgrade</button>
                <i class="fa fa-bell"></i>
                <div class="profile"><img src="https://d8it4huxumps7.cloudfront.net/uploads/images/unstop/user-avatar/png/8.png?d=50x50" alt=""></div>
            </div>
        </header>

        <section class="hero">
            <section class="welcome">
                <h2>Welcome back!</h2>
                <p class="sub">Overall performance</p>
            </section>
            <section class="cards">
                <div class="tcan">
                    <div class="tcan1">
                        <div class="num">0</div>
                        <div class="label">Total Candidates</div>
                    </div>
                    <div class="tcan2">
                        <span><i class="fa-regular fa-user"></i></span>
                    </div>
                </div>
                <div class="card">
                    <section class="subcard">
                        <div class="subcard1">
                            <div class="num" id="numwork">0</div>
                            <div class="label">Active Workshops</div>
                        </div>
                        <div class="subcard2">
                            <span><i class="fa-regular fa-user"></i></span>
                        </div>
                    </section>
                    <section class="subcard22">
                        <span><p id="numtot">Total : </p></span>
                        <span id="numreg">Registrations : </span>
                    </section>
                    
                </div>


            <div class="card">
                    <section class="subcard">
                        <div class="subcard1">
                            <div class="num">0</div>
                            <div class="label">Active Seminars</div>
                        </div>
                        <div class="subcard2">
                            <span><i class="fa-regular fa-user"></i></span>
                        </div>
                    </section>
                    <section class="subcard22">
                        <span><p>Total</p></span>
                        <span>Registrations</span>
                    </section>
                    
                </div>
                <div class="card">
                    <section class="subcard">
                        <div class="subcard1">
                            <div class="num">0</div>
                            <div class="label">Active Hackathons</div>
                        </div>
                        <div class="subcard2">
                            <span><i class="fa-regular fa-user"></i></span>
                        </div>
                    </section>
                    <section class="subcard22">
                        <span><p>Total</p></span>
                        <span>Registrations</span>
                    </section>
                    
                </div>

            <div class="card">
                    <section class="subcard">
                        <div class="subcard1">
                            <div class="num">0</div>
                            <div class="label">Active Networking Events</div>
                        </div>
                        <div class="subcard2">
                            <span><i class="fa-regular fa-user"></i></span>
                        </div>
                    </section>
                    <section class="subcard22">
                        <span><p>Total</p></span>
                        <span>Registrations</span>
                    </section>
                    
                </div>

            
        </section>
            <section class="lower">
            <div class="left-placeholder">
                <img src="https://i.imgur.com/eY3cIhE.png" alt="placeholder">
                <p>No data available</p>
                <img src="https://i.imgur.com/eY3cIhE.png" alt="placeholder">
                <p>No data available</p>
                <img src="https://i.imgur.com/eY3cIhE.png" alt="placeholder">
                <p>No data available</p>
                <img src="https://i.imgur.com/eY3cIhE.png" alt="placeholder">
                <p>No data available</p>
                <img src="https://i.imgur.com/eY3cIhE.png" alt="placeholder">
                <p>No data available</p>
                <img src="https://i.imgur.com/eY3cIhE.png" alt="placeholder">
                <p>No data available</p>

            </div>

            <div class="alerts">
                <div class="tabs">
                    <span class="active">Alerts (2)</span>
                    <span>Upcoming</span>
                </div>

                <div class="alert-item">
                    <span class="tag">Listing Not Complete</span>
                    <h4>Untitled</h4>
                    <p>Workshops</p>
                </div>

                <div class="alert-item">
                    <span class="tag">Listing Not Complete</span>
                    <h4>ABCD</h4>
                    <p>Workshops</p>
                </div>
            </div>
        </section>
        </section>
       
        <script>
            fetch("/api/host/workshops")
            .then(res => res.json())
            .then(data => {
                if (!data || !data.workshops) {
                    console.error("No workshops returned:", data);
                    return;
                }

                const count = data.workshops.length;
                document.getElementById("numwork").textContent = count;
                document.getElementById("numtot").innerHTML = `Total : ${data.workshops.length}`
                document.getElementById('numreg').innerHTML = `Registrations : ${data.workshops}`
            })
            .catch(err => console.error("Fetch error:", err));


        </script>

      
        
    </main>

</body>
</html>
