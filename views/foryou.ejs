// Render Function
function renderEvents(list) {
    const container = document.getElementById("eventsContainer");
    container.innerHTML = "";

    list.forEach(e => {
        container.innerHTML += `
            <div class="event-card">
                <span class="badge">${e.category}</span>
                <span class="mode">${e.mode}</span>

                <h3>${e.title}</h3>
                <p>${e.desc}</p>

